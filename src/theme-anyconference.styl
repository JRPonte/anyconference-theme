@import variables-anyconf

.topcoat-view
    border-radius: 6px
    /*height: 100vh*/
    /*width: 100vw*/

.topcoat-navigation-bar__title
    font-family "League Gothic"
    text-transform: uppercase
    letter-spacing: .1rem
    text-shadow: 0px 1px 0px #fff

.anyconf-label-status
    position: relative
    background: #dcdcdc
    height: 2.4rem
    padding: 0
    border: none
    padding-left: 1rem
    font-size: 1rem
    box-sizing: border-box


.anyconf-label-status--next
    text-align: right
    background: #99cc33


.anyconf-label-status--next:after
    position: absolute
    right: 0
    top: 0
    height: 90%
    content: "UP NEXT"
    line-height: 2rem
    font-size: 2rem
    font-family: 'League Gothic'
    padding: .07rem .7rem
    color: white
    background: #99cc33
    text-shadow: 0px -1px 0px #51740a


.anyconf-label-time
    display: block
    color: #707070
    background: #f2f3f3
    line-height: 1em
    font-size: 1.1rem
    padding: .5em 1em
    text-shadow: 0px 1px 0px #fff


.anyconf-label-title
    font-weight: 400
    margin: 0
    padding-bottom: .5em




